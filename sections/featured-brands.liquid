{{'featured-brands.css' | asset_url | stylesheet_tag }}
<div class="featured-brand-section">
    {% render 'section-heading', heading: section.settings.heading %}
    <div class="featured-brand-section__wrapper">
         <div class="featured-brand-section__content"> 
         <custom-carousel>
         {% for block in section.blocks %} 
         {% liquid 
           assign id = block.id
           assign image = block.settings.image
         %}
         <div class="swiper-slide featured-brand-section__item">
          {% render 'shopify-responsive-image',
            image: image,
            aspect_ratio: 3.45
          %}
         </div>
         {% endfor %}
         <script type="text/json" data-settings>
             {
               "slidesPerView": 3.01,
               "spaceBetween": 10,
               "overflowNagivation": true,
               "progressPagination": true,
               "pagination": true,
               "breakpoints": {
                "1024": {
                   "pagination": false,
                   "navigation": true,
                   "slidesPerView": 6,
                   "spaceBetween": 32
                 }
               }
             }
           </script>
     </custom-carousel>
   </div>
 </div>
</div>



{% schema %}
 {
   "name": "Featured Brands",
   "settings": [
     {
       "type": "text",
       "id": "heading",
       "label": "Section Heading"
     }
   ],
   "blocks": [
    {
        "type": "featured_brand",
        "name": "Featured Brand",
        "settings": [
          {
            "type": "header",
            "content": "Block Group"
          },
          {
              "type": "image_picker",
              "id": "image",
              "label": "Brand Logo"
          }
        ]
      }
    ],
   "presets": [
    {
      "name": "Featured Brands"
    }
   ]
 }

{% endschema %}