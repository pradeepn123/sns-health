{{'featured-brands.css' | asset_url | stylesheet_tag }}
<div class="featured-brand-section">
    {% render 'section-heading', heading: section.settings.heading %}
    <div class="featured-brand-section__wrapper">
         <div class="featured-brand-section__content">
          <div class="featured-brand-section__content-wrapper  featured-brand-section__content-wrapper--desktop">
         <custom-carousel>
          <div class="custom-carousel__content hide" data-carousel-content>
         {% for block in section.blocks %} 
         {% liquid 
           assign id = block.id
           assign image = block.settings.image
           assign url = block.settings.url
         %}
         <a class="swiper-slide featured-brand-section__item" {% if url%} href="{{url}}" {% endif%}>
          {% render 'shopify-responsive-image',
            image: image,
            aspect_ratio: 3.5,
            contain: true
          %}
        </a>
         {% endfor %}
        </div>
        <div class="carousel-placeholders"></div>
         <script type="text/json" data-settings>
          {
            "slidesPerView": 3.01,
            "spaceBetween": 10,
            "overflowNagivation": true,
            "progressPagination": true,
            "pagination": true,
            "breakpoints": {
             "1024": {
                "pagination": false,
                "navigation": true,
                "slidesPerView": 6,
                "spaceBetween": 32
              }
            }
          }
        </script>
      </custom-carousel>
        </div>
        <div class="featured-brand-section__content-wrapper  featured-brand-section__content-wrapper--mobile">
          <custom-carousel>
            <div class="custom-carousel__content hide" data-carousel-content>
          {% for block in section.blocks %} 
          {% liquid 
            assign id = block.id
            assign image = block.settings.image
            assign url = block.settings.url
          %}
          <a class="swiper-slide featured-brand-section__item" {% if url%} href="{{url}}" {% endif%}>
           {% render 'shopify-responsive-image',
             image: image,
             aspect_ratio: 2.5,
             contain: true
           %}
         </a>
          {% endfor %}
        </div>
        <div class="carousel-placeholders"></div>
         <script type="text/json" data-settings>
          {
            "slidesPerView": 3.01,
            "spaceBetween": 10,
            "overflowNagivation": true,
            "progressPagination": true,
            "pagination": true,
            "breakpoints": {
              "768": {
                "pagination": true,
                "navigation": false,
                "slidesPerView": 5,
                "spaceBetween": 20
              },
             "1024": {
                "pagination": false,
                "navigation": true,
                "slidesPerView": 6,
                "spaceBetween": 32
              }
            }
          }
        </script>
     </custom-carousel>
    </div>
   </div>
 </div>
</div>



{% schema %}
 {
   "name": "Featured Brands",
   "settings": [
     {
       "type": "text",
       "id": "heading",
       "label": "Section Heading"
     }
   ],
   "blocks": [
    {
        "type": "featured_brand",
        "name": "Featured Brand",
        "settings": [
          {
            "type": "header",
            "content": "Block Group"
          },
          {
              "type": "image_picker",
              "id": "image",
              "label": "Brand Logo"
          },
          {
            "type": "url",
            "id": "url",
            "label": "Brand url"
          }
        ]
      }
    ],
   "presets": [
    {
      "name": "Featured Brands"
    }
   ]
 }

{% endschema %}