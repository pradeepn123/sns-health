
{% render 'product-carousel', section: section %}
 
{% schema %}
{
  "name": "product-carousel",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading"
    },
    {
      "type": "checkbox",
      "id": "mobile_carousel",
      "label": "Carousel on mobile ?",
      "default": true
    },
    {
      "type": "url",
      "id": "url",
      "label": "View All"
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "collection",
      "settings": [
        {
            "type": "text",
            "id": "collection_text",
            "label": "Tab Text",
            "info": "required field"
        },
        {
          "type": "text",
          "id": "canada_rule_id",
          "label": "Rebuy Rule ID for Canada"
        },
        {
          "type": "text",
          "id": "other_rule_id",
          "label": "Rebuy Rule ID for Other"
        },
        {
          "type": "collection",
          "id": "collection",
          "label": "Static Collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Carousel"
    }
  ]
}
{% endschema %}
