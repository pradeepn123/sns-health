{{ 'featured-products.css' | asset_url | stylesheet_tag }}
{% if section.blocks.size > 0 %}
<div class="featured-products">
    {% render 'section-heading', heading: section.settings.heading, url: section.settings.url %}
        <product-carousel>
          <script id="product-data" type="text/json">
            {
              "data": {% render 'JSON-output-section-product-carousel' , section: section %}
            }
          </script>
        </product-carousel>
    </div>
    </div>
</div>
{% endif %}

{% schema %}
{
  "name": "product-carousel",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading"
    },
    {
      "type": "checkbox",
      "id": "mobile_carousel",
      "label": "Carousel on mobile ?",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "collection",
      "settings": [
        {
            "type": "text",
            "id": "collection_text",
            "label": "Tab Text",
            "info": "required field"
        },
        {
          "type": "text",
          "id": "rule_id",
          "label": "Rebuy Rule ID"
        },
        {
          "type": "collection",
          "id": "collection",
          "label": "Static Collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Carousel"
    }
  ]
}
{% endschema %}
