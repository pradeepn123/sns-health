{
  "name": "Shop By Brands text",
  "settings": [    
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Shop By Brand"
    },
    {
      "type": "radio",
      "id": "align_text",
      "label": "Text alignment",
      "default": "left",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ]
    },
    {
      "type": "text",
      "id": "brand_title",
      "label": "Brand Heading"      
    },
    {
      "type": "radio",
      "id": "brand_align_text",
      "label": "Brand Text alignment",
      "default": "left",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ]
    }
  ],
  "blocks": [
    {
      "type": "selected_collection",
      "name": "Featured Collection",
      "settings":[
        {
          "type": "collection",
          "id": "featured_collection_item",
          "label": "Choose a Featured Collection"
        },
        {
          "type": "image_picker",
          "id": "featured_collection_image",
          "label": "Choose a Featured Collection Image"
        },
        {
          "type": "checkbox",
          "id": "show_overlay",
          "label": "Show overlay",
          "info": "Increase text readability on busy images.",
          "default": false
        },
        {
          "type": "range",
          "id": "overlay_opacity",
          "label": "Overlay opacity",
          "min": 0,
          "max": 50,
          "step": 1,
          "unit": "%",
          "default": 20
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "Shop By Brands",
      "name": "Shop By Brands text",
      "settings": {}
    }
  ]
}
{% endschema %}