              </tr>
              {% for tax_line in order.tax_lines %}
                <tr>
                  <td class="pricing-table-title">{{ tax_line.title }} ({{ tax_line.rate | times: 100 }}%)</td>
                  <td class="pricing-table-text">{{ tax_line.price | money }}</td>
