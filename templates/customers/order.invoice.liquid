              {% endfor %}
              <tr class="pricing-table-total-row">
                <td class="pricing-table-title">
                  <span class="editable" data-key="total">Total</span> ({{ order.currency }})
                </td>
                <td class="pricing-table-text">{{ order.total_price | money }}</td>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="clear-fix"></div>
      </div>
      <div class="clear-fix"></div>
    </div>
